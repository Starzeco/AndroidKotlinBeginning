<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@drawable/lugia"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >

    <ImageView
            android:layout_width="172dp"
            android:layout_height="166dp"
            app:srcCompat="@mipmap/custom_egg_foreground"
            android:id="@+id/imageView5"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/podpowiedz"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" tools:textSize="24sp" android:textStyle="bold"
            android:textColor="@color/purple"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_caterpie_foreground"
            android:id="@+id/caterpieView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_charmander_foreground"
            android:id="@+id/charmView"
            app:layout_constraintStart_toEndOf="@+id/meowthView" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_eevee_foreground"
            android:id="@+id/eeveeView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/jiggView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_jigg_foreground"
            android:id="@+id/jiggView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/mankeyView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_mankey_foreground"
            android:id="@+id/mankeyView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/pidgeyView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_meowth_foreground"
            android:id="@+id/meowthView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/eeveeView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_pidgey_foreground"
            android:id="@+id/pidgeyView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/pikachuView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_pikachu_foreground"
            android:id="@+id/pikachuView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/psyView"
            android:layout_marginStart="8dp" android:visibility="invisible"/>
    <ImageView
            android:layout_width="28dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/custom_psy_foreground"
            android:id="@+id/psyView"
            app:layout_constraintStart_toEndOf="@+id/caterpieView" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="invisible"/>
    <TextView
            android:text="Widziane Pokemony"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seen" android:visibility="invisible"
            android:textColor="@color/purple" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/psyView"/>

</androidx.constraintlayout.widget.ConstraintLayout>