<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                app:layout_constraintGuide_begin="@dimen/guide_begin"
                                                android:orientation="vertical"/>
    <ImageView
            android:layout_width="@dimen/width_big"
            android:layout_height="@dimen/height_big"
            android:id="@+id/big_photo"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="@dimen/margin_start_big"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/margin_end_big"
            android:layout_marginTop="@dimen/margin_top_big"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="@dimen/margin_bottom_big"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="@dimen/constrain_width"
            android:layout_height="@dimen/constrain_height"
            android:background="@color/fastlane_background"
            app:layout_constraintEnd_toStartOf="@+id/big_photo"
            android:layout_marginEnd="@dimen/margin_end_constrain"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/margin_start_constrain"
            android:layout_marginTop="@dimen/margin_top_constrain"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/margin_bottom_constrain">

        <ImageView
                android:layout_width="@dimen/jablko1_width"
                android:layout_height="@dimen/jablko1_height"
                app:srcCompat="@drawable/jablko"
                android:id="@+id/jablko1"
                android:layout_marginTop="@dimen/jablko1_margin_top"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/jablko1_margin_start"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/jablko1_margin_end"
                app:layout_constraintHorizontal_bias="0.495"/>
        <ImageView
                android:layout_width="@dimen/jablko2_width"
                android:layout_height="@dimen/jablko2_height"
                app:srcCompat="@drawable/jabuszko2"
                android:id="@+id/jablko2"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/jablko2_margin_end"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/jablko2_margin_start"
                android:layout_marginBottom="@dimen/jablko2_margin_bottom"
                app:layout_constraintBottom_toTopOf="@+id/jablko3"
                android:layout_marginTop="@dimen/jablko2_margin_top"
                app:layout_constraintTop_toBottomOf="@+id/jablko1"/>
        <ImageView
                android:layout_width="@dimen/jablko3_width"
                android:layout_height="@dimen/jablko3_height"
                app:srcCompat="@drawable/jablko3"
                android:id="@+id/jablko3"
                android:layout_marginBottom="@dimen/jablko3_margin_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/jablko3_margin_end"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/jablko3_margin_start"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>